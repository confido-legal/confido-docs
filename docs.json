{
    "$schema": "https://mintlify.com/docs.json",
    "theme": "mint",
    "name": "Confido Legal Docs",
    "colors": {
        "primary": "#3182CE",
        "light": "#63B3ED",
        "dark": "#2B6CB0"
    },
    "favicon": "/favicon.svg",
    "navigation": {
        "tabs": [
            {
                "tab": "Guides",
                "groups": [
                    {
                        "group": "Overview",
                        "pages": ["overview/introduction", "overview/quickstart", "overview/development"]
                    },
                    {
                        "group": "Firm Onboarding",
                        "pages": [
                            "firm-onboarding/overview",
                            "firm-onboarding/connect",
                            "firm-onboarding/firm-status",
                            "essentials/images",
                            "essentials/settings",
                            "essentials/navigation",
                            "essentials/reusable-snippets"
                        ]
                    }
                ]
            },
            {
                "tab": "API Reference",
                "groups": [
                    {
                        "group": "API Documentation",
                        "pages": ["api-reference/introduction"]
                    },
                    {
                        "group": "Endpoint Examples",
                        "pages": [
                            "api-reference/endpoint/get",
                            "api-reference/endpoint/create",
                            "api-reference/endpoint/delete",
                            "api-reference/endpoint/webhook"
                        ]
                    }
                ]
            }
        ],
        "global": {
            "anchors": [
                {
                    "anchor": "GraphQL Playground",
                    "href": "https://api.gravity-legal.com",
                    "icon": "webhook"
                },
                {
                    "anchor": "Community",
                    "href": "https://mintlify.com/community",
                    "icon": "slack"
                }
            ]
        }
    },
    "logo": {
        "light": "/logo/confido-light.svg",
        "dark": "/logo/dark.svg"
    },
    "navbar": {
        "links": [
            {
                "label": "Support",
                "href": "mailto:hi@mintlify.com"
            }
        ],
        "primary": {
            "type": "button",
            "label": "Login",
            "href": "https://app.sandbox.confidolegal.com"
        }
    },
    "footer": {
        "socials": {
            "github": "https://github.com/confido-legal",
            "linkedin": "https://www.linkedin.com/company/confidolegal/posts/?feedView=all"
        }
    }
}
